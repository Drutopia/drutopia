{
    "name": "drupal/drutopia",
    "description": "Drutopia's base distribution provides an enhanced starting place for building sites for grassroots organizations and other purposes.",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "@composer drupal-scaffold",
            "./bin/phing push"
        ],
        "post-update-cmd": [
            "./bin/phing push"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/{$name}": ["type:drupal-profile"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/themes/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
    },
    "require": {
        "cweagans/composer-patches": "^1.5.0",
        "composer/installers": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/core": "^8.3.4",
        "drupal/better_normalizers": "^1.0-beta3",
        "drupal/block_visibility_groups": "^1.1",
        "drupal/components": "^1.0",
        "drupal/config_update": "^1.3",
        "drupal/features": "^3.5",
        "drupal/paranoia": "^1.0-alpha1",
        "drupal/subprofiles": "^1.0-alpha1",
        "drupal/default_content": "^1.0-alpha6",
        "drupal/drutopia_action": "1.x-dev",
        "drupal/drutopia_article": "1.x-dev",
        "drupal/drutopia_blog": "1.x-dev",
        "drupal/drutopia_campaign": "1.x-dev",
        "drupal/drutopia_comment": "1.x-dev",
        "drupal/drutopia_core": "1.x-dev",
        "drupal/drutopia_event": "1.x-dev",
        "drupal/drutopia_group": "1.x-dev",
        "drupal/drutopia_landing_page": "1.x-dev",
        "drupal/drutopia_page": "1.x-dev",
        "drupal/drutopia_people": "1.x-dev",
        "drupal/drutopia_search": "1.x-dev",
        "drupal/drutopia_seo": "1.x-dev",
        "drupal/drutopia_site": "1.x-dev",
        "drupal/drutopia_social": "1.x-dev",
        "drupal/drutopia_user": "1.x-dev",
        "drupal/bulma": "^1.0-alpha2",
        "drupal/octavia": "^1.0-alpha1"
    },
    "require-dev": {
        "drush/drush": "^8.0",
        "drupal/drupal-extension": "^3.2",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "behat/behat": "^3.0",
        "phing/phing": "^2.14",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",
        "drupal/devel": "^1.0",
        "squizlabs/php_codesniffer": "2.*",
        "se/selenium-server-standalone": "^2.53"
    },
    "extra": {
        "patches": {
            "drupal/features": {
                "'excluded' property not set in *.features.yml": "https://www.drupal.org/files/issues/features-excluded-2860993-4.patch",
                "'excluded' configuration should not be automatically packaged": "https://www.drupal.org/files/issues/features-exclude-2891353-2.patch"
            }
        }
    }
}

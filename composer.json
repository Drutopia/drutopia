{
    "name": "drupal/drutopia",
    "description": "Drutopia's base distribution provides an enhanced starting place for building sites for grassroots organizations and other purposes.",
    "type": "drupal-profile",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
    },
    "extra": {
        "patches": {
            "drupal/core": {
                "Fix region string issue": "https://www.drupal.org/files/issues/2724283-block-22.patch",
                "Make sure exposed filters work": "https://www.drupal.org/files/issues/2369119-120.patch",
                "Redirect to install.php on empty DB": "https://www.drupal.org/files/issues/728702-163.patch",
                "Clean up user input for exposed checkboxes": "https://www.drupal.org/files/issues/2687773-18-Cleanup-user-input-for-checkboxes-8.2.patch",
                "views_query_views_alter does not handle IN queries": "https://www.drupal.org/files/issues/2744069-5-views-in-queries.patch",
                "Color module html preview optional": "https://www.drupal.org/files/issues/color-optional-html-preview-2844190-2.patch"
            }
        }
    },
    "require": {
        "cweagans/composer-patches": "^1.5.0",
        "composer/installers": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/core": "8.2.7",
        "drupal/config_update": "1.3",
        "drupal/features": "3.5",
        "drupal/drutopia_article": "1.x-dev",
        "drupal/drutopia_blog": "1.x-dev",
        "drupal/drutopia_comment": "1.x-dev",
        "drupal/drutopia_core": "1.x-dev",
        "drupal/drutopia_page": "1.x-dev",
        "drupal/drutopia_site": "1.x-dev",
        "drupal/drutopia_user": "1.x-dev"
    }
}
